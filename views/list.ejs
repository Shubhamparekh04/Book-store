<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - View Books</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .table thead {
        position: sticky;
        top: 0;
        z-index: 10;
      }

      .table-container {
        max-height: 500px;
        overflow-y: auto;
      }
    </style>
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-primary p-3">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Bookstore Admin</a>
        <div>
          <a href="/form" class="btn btn-light me-2">Add New Book</a>
          <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </nav>

    <!-- Book Table -->
    <div class="container mt-4">
      <h3 class="text-center mb-4">Book List</h3>
      <div class="card shadow p-2 border">
        <!-- Scrollable Table Container -->
        <div class="table-container">
          <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Title</th>
                <th>Image</th>
                <th>Author</th>
                <th>Price (â‚¹)</th>
                <th>Description</th>
                <th>Bestseller</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% books.forEach((book, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= book.title %></td>
                <td>
                  <img
                    src="<%= book.image %>"
                    alt="Book Cover"
                    width="80"
                    height="120"
                  />
                </td>
                <td><%= book.author %></td>
                <td><%= book.price %></td>
                <td><%= book.description %></td>
                <td><%= book.bestseller ? "Yes" : "No" %></td>
                <!-- Vertically Centered Buttons -->
                <td>
                  <div class="d-flex flex-column align-items-center gap-2">
                    <a href="/admin/delete/<%= book.id %>" class="btn btn-danger">Delete</a>
                    <a href="/admin/edit/<%= book.id %>" class="btn btn-warning">Edit</a>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>

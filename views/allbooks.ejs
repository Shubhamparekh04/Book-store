<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Books</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .card-img-container {
        width: 100%;
        height: 250px; /* Fixed height for uniform size */
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa; /* Light gray background for empty spaces */
      }
      .card-img-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain; /* Ensures the entire image is visible */
      }
    </style>
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-primary p-3">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Bookstore</a>
        <a href="/index" class="btn btn-light">Back to Home</a>
      </div>
    </nav>

    <!-- Books Section -->
    <div class="container mt-4">
      <h3 class="text-center mb-4">All Books</h3>
      <div class="row">
        <% if (data.length > 0) { %>
          <% data.forEach((book) => { %>
            <div class="col-md-3 mb-4">
              <div class="card shadow h-100 d-flex flex-column">
                <div class="card-img-container">
                  <img
                    src="<%= book.image || 'https://via.placeholder.com/150' %>"
                    class="card-img-top"
                    alt="Book Image"
                  />
                </div>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= book.title %></h5>
                  <p class="card-text">Author: <%= book.author %></p>
                  <p class="card-text">Price: â‚¹<%= book.price %></p>
                  <a href="/book/<%= book._id %>" class="btn btn-primary mt-auto">View Details</a>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p class="text-center">No books available.</p>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

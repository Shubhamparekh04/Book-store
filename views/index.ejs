<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bookstore</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .book-img {
      height: 250px; /* Fixed height */
      object-fit: contain; /* Ensures full image visibility */
    }
  </style>
</head>
<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-primary p-3">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Bookstore</a>
      <a href="/allbooks" class="btn btn-light">View All Books</a>
    </div>
  </nav>

  <!-- Slider (Best Seller Images) -->
  <div class="container mt-5">
    <h3 class="text-center mb-4">Featured Books</h3>
    <div id="bookSlider" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner text-center">
        <% if (sliderBooks.length > 0) { %>
          <% sliderBooks.forEach((image, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <img src="<%= image %>" class="d-block w-25 mx-auto" alt="Book Image" />
            </div>
          <% }); %>
        <% } else { %>
          <div class="carousel-item active">
            <img src="https://via.placeholder.com/400x300" class="d-block w-25 mx-auto" alt="No image available" />
          </div>
        <% } %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#bookSlider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#bookSlider" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>
  </div>

  <!-- Best Seller Books -->
  <div class="container mt-5">
    <h3 class="text-center mb-4">Best Seller Books</h3>
    <div class="row">
      <% bestsellerBooks.forEach((book) => { %>
        <div class="col-md-3 mb-4">
          <div class="card shadow">
            <img src="<%= book.image %>" class="card-img-top book-img img-fluid" alt="Book Image" />
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text">Author: <%= book.author %></p>
              <p class="card-text">Price: ₹<%= book.price %></p>
              <a href="/book/<%= book.id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- New Popular Books -->
  <div class="container mt-5">
    <h3 class="text-center mb-4">New Popular Books</h3>
    <div class="row">
      <% popularBooks.forEach((book) => { %>
        <div class="col-md-3 mb-4">
          <div class="card shadow">
            <img src="<%= book.image %>" class="card-img-top book-img img-fluid" alt="Book Image" />
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text">Author: <%= book.author %></p>
              <p class="card-text">Price: ₹<%= book.price %></p>
              <a href="/book/<%= book.id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
